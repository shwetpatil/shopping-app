{
  "name": "@shopping-app/mfe-products",
  "version": "1.0.0",
  "description": "Products microfrontend - Independently deployable products catalog module",
  "private": true,
  "author": "Commerce Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/shopping-app.git",
    "directory": "apps/mfe-products"
  },
  "keywords": [
    "microfrontend",
    "products",
    "nextjs",
    "react-query",
    "ecommerce"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:ci": "jest --config config/jest.config.js --ci --coverage --maxWorkers=2",
    "clean": "rm -rf .next coverage",
    "clean:all": "rm -rf .next node_modules coverage",
    "prebuild": "rm -rf .next",
    "analyze": "ANALYZE=true next build",
    "validate": "npm run type-check && npm run lint && npm run test",
    "ci": "npm run validate && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@shopping-app/config": "workspace:*",
    "@shopping-app/mfe-contracts": "file:../../packages/mfe-contracts",
